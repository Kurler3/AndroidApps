<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventsList">
    <TextView
        android:id="@+id/eventsListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Events"
        android:textSize="40sp"
        android:layout_marginTop="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@id/eventsListTitle"
        android:layout_marginTop="15dp"/>
    <ImageButton
        android:id="@+id/addEventBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/eventListRecyclerView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/add_task_button_background"/>
    <ImageButton
        android:id="@+id/deleteEventBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/delete"
        android:layout_below="@id/eventListRecyclerView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>