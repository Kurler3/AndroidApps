<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/greetingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello User"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/greetingsText"
        android:layout_marginTop="40dp">
        <Button
            android:id="@+id/profileBtn"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:text="Profile"
            android:textSize="35sp"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/toDoListBtn"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:text="TO-DO"
            android:textSize="35sp"
            android:layout_toRightOf="@id/profileBtn" />
        <Button
            android:id="@+id/moodBtn"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:text="Mood"
            android:textSize="35sp"
            android:layout_below="@id/profileBtn"
            android:layout_marginLeft="20dp" />
        <Button
            android:id="@+id/alarmBtn"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:text="Alarm"
            android:textSize="35sp"
            android:layout_below="@id/toDoListBtn"
            android:layout_toRightOf="@id/moodBtn" />
        <Button
            android:id="@+id/eventsBtn"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:text="Events"
            android:textSize="35sp"
            android:layout_below="@id/moodBtn"
            android:layout_marginLeft="20dp" />
        <Button
            android:id="@+id/othersBtn"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:text="Others"
            android:textSize="35sp"
            android:layout_below="@id/alarmBtn"
            android:layout_toRightOf="@id/eventsBtn" />
        <Button
            android:id="@+id/settingsBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Settings"
            android:textSize="33sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/eventsBtn" />
    </RelativeLayout>
</RelativeLayout>