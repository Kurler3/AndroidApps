<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmsActivity">
    <TextView
        android:id="@+id/alarmsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Alarms"
        android:textSize="30sp"
        android:layout_marginTop="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/alarmsListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@id/alarmsTitle"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>
    <ImageButton
        android:id="@+id/addAlarmBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/add_task_button_background"
        android:layout_below="@id/alarmsListRecyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>
</RelativeLayout>